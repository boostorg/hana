require-b2 5.2 ;

constant boost_dependencies :
    /boost/config//boost_config
    /boost/core//boost_core
    /boost/fusion//boost_fusion
    /boost/mpl//boost_mpl
    /boost/tuple//boost_tuple ;

project /boost/hana
    : common-requirements
        <include>include
    ;

